<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background track -->
    <item>
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="#E0E0E0" /> <!-- 배경 색 -->
        </shape>
    </item>

    <!-- Progress track -->
    <item>
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <solid android:color="#B2DFF6" /> <!-- 진행 색 -->
            </shape>
        </clip>
    </item>
</layer-list>